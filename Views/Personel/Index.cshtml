@using MvcWebTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px; @*margin-left:20px; margin-right:20px;*@">


    <tr>
        <th>ID</th>
        <th>PERSONEL ADI</th>
        <th>PERSONEL SOYADI</th>
        <th>PERSONEL RESMİ</th>
        <th>BAĞLI BULUNDUĞU DEPARTMANI</th>
        <th>GÜNCELLE</th>
        <th>PERSONELİN YAPTIĞI SATIŞLAR</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.PersonelID</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>
                <img src=@k.PersonelGorsel style="width:100px; height:100px;" />
            </td>
            <td>@k.Departmant.DepartmantAd</td> 
           <td><a href="/Personel/PersonelGetir/@k.PersonelID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Departmant/DepartmantPersonelSatis/@k.PersonelID" class="btn btn-success" style="background-color:cadetblue">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>


