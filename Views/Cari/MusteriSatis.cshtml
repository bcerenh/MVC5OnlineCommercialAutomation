@using MvcWebTicariOtomasyon.Models.Siniflar
@model List<SatisHareketi>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />


<table class="table table-condensed">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
       <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatisHareketiID</td>
            <td>@x.Urun.UrunAd</td>
          <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.SatisTarihi</td>
            <td> <a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a></td>
        </tr>
    }
    </table>

