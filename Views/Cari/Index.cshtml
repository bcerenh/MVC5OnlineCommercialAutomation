@using MvcWebTicariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    @*striped table da bir koyu bir açık geliyor*@
    <tr>
        <th>Cari ID</th>
        <th>Cari Ad</th>
        <th>Cari Soyad</th>
        <th>Cari Şehir</th>
        <th>Cari E-mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach(var x in Model)
       
            {
      <tr>
          <td>@x.CariId</td>
          <td>@x.CariAd</td>
          <td>@x.CariSoyad</td>
          <td>@x.CariSehir</td>
          <td>@x.CariMail</td>
          <td><a href="/Cari/CariSil/@x.CariId" class="btn btn-danger">Sil</a></td>
          <td><a href="/Cari/CariGetir/@x.CariId" class="btn btn-warning">Güncelle</a></td>
          <td><a href="/Cari/MusteriSatis/@x.CariId" class="btn btn-default" style="background-color:lightcoral">Satış Geçmişi</a></td>
      </tr>
            }    
</table>
<a href="/Cari/CariEkle" class="btn btn-info">Yeni Cari Ekle</a>
