@model MvcWebTicariOtomasyon.Models.Siniflar.SatisHareketi
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Satış Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Ürün Adı")
    @Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.CariId, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />

    @Html.Label("Stok Adedi")
    
    
    <br />

    @Html.LabelFor(x => x.Adet)
    @*@Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })*@
    <input type="text" name="Adet" class="form-control" id="txt1" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.Fiyat)
    @*@Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })*@
    <input type="text" name="Fiyat" class="form-control" id="txt2" onkeyup="sum();" />
    <br />

    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" name="ToplamTutar" id="txt3" class="form-control" />
    @*@Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control" })*@
    <br />
    <button class="btn btn-primary">Satış Yap</button>
    <script>
        function sum() {
            var s1 = (document.getElementById("txt1").value);
            var s2 = (document.getElementById("txt2").value);
            var sonuc = parseInt(s1) * parseInt(s2);
            if (!isNaN(sonuc)) {
                document.getElementById("txt3").value = sonuc;
            }
        }
    </script>
</form>


