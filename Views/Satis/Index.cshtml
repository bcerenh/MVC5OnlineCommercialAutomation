@using MvcWebTicariOtomasyon.Models.Siniflar
@model List<SatisHareketi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@*<table id="tbl1" class="table table-bordered" style="margin-top:20px">*@
    <table id="tbl1" class="table table-bordered" style="margin-top:20px" >
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>SATIŞ TARİHİ</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.SatisHareketiID</td>
            <td>@k.Urun.UrunAd</td>
            <td>@k.Cari.CariAd @k.Cari.CariSoyad</td>
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.SatisTarihi</td>
            <td><a href="/Satis/SatisGetir/@k.SatisHareketiID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@k.SatisHareketiID" class="btn btn-success" style="background-color:cadetblue">Detaylar</a></td>
        </tr>
    }
</table>
    <a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>
