@using MvcWebTicariOtomasyon.Models.Siniflar
@model List<SatisHareketi>
@{
    ViewBag.Title = "DepartmantPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departmant Personel Satış Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">
        Personel Adı : @ViewBag.re
    </li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış Id</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SatisHareketiID</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
            <td>@x.Fiyat ₺</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.SatisTarihi</td>
            <td> <a href="#" class="btn btn-default" style="background-color:dodgerblue" onclick="window.print()">Yazdır</a></td>
            
        </tr>

    }



</table>

