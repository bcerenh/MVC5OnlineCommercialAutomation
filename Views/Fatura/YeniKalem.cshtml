@model MvcWebTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Kalem Girişi</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Faturadaki Ürünün Açıklamasını Giriniz:")
    @Html.TextBoxFor(x => x.FaturaAcıklamasi, new { @class = "form-control" })
    <br />
    @Html.Label("Faturadaki Ürünlerin Adedini Giriniz:")
    <input type="text" name="Miktar" class="form-control" id="txt1" onkeyup="sum();" />
    @*@Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })*@
    <br />
    @Html.Label("Faturadaki Ürünün Birim Fiyatını Giriniz:")
    <input type="text" name="UrunBirimFiyat" class="form-control" id="txt2" onkeyup="sum();" />
    @*@Html.TextBoxFor(x => x.UrunBirimFiyat, new { @class = "form-control" })*@
    <br />
    @Html.Label("Toplam Ürün Tutarı:")
    @*@Html.TextBoxFor(x => x.UrunTutar, new { @class = "form-control" })*@
    <input type="text" name="UrunTutar" value="0" class="form-control" id="txt3" />
    <br />
    @Html.LabelFor(x => x.Faturaid, "Fatura ID Güncelleyiniz:")
    @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
    <script>
        function sum() {
            var s1 = (document.getElementById("txt1").value);
            var s2 = (document.getElementById("txt2").value);
            var sonuc = parseInt(s1) * parseInt(s2);
            if (!isNaN(sonuc)) {
                document.getElementById("txt3").value = sonuc;
            }
        }
    </script>

