@model MvcWebTicariOtomasyon.Models.Siniflar.SatisHareketi
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Satış Yap</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.UrunID)
    <input type="text" name="UrunID" value="@ViewBag.urundegeri" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.PersonelID)
    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personeldegeri, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CariId)
    @Html.TextBoxFor(x => x.CariId, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Adet)
    <input type="number" name="Adet" class="form-control" max="1000" min="0" placeholder="Lütfen Adet Giriniz" id="txt1" onchange="sum();" />
    @*/onchange modu bir şey değiştinde fonksiyon devreye girsin diye/*@
    <br />
    @Html.LabelFor(x => x.Fiyat)
    <input type="text" name="Fiyat" value="@ViewBag.fiyatdegeri" class="form-control" id="txt2" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.ToplamTutar)
    <input type="text" name="ToplamTutar" value="0" class="form-control" id="txt3" readonly />

    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
<br />
<script>
    function sum() {
        var s1 = (document.getElementById("txt1").value);
        var s2 = (document.getElementById("txt2").value);
        var sonuc = parseInt(s1) * parseInt(s2);
        if (!isNaN(sonuc)) {
            document.getElementById("txt3").value = sonuc;
        }
    }
</script>