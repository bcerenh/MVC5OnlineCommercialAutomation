@using MvcWebTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
    <p>
        Ürün Adı : @Html.TextBox("p")
        <input  type="submit" value="Ara"/>
    </p>

    }
<br />
<table class="table table-bordered">
    <tr>

        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DURUM</th>
        <th>SATIŞ</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>

            <td>@u.UrunAd</td>
            <td>@u.UrunMarka</td>
            <td>@u.UrunStok</td>
            <td>@u.UrunAlisFiyat ₺</td>
            <td>@u.UrunSatisFiyat ₺</td>
            <td>@u.Kategori.KategoriAd</td>

            <td>
                <img src=@u.UrunGorsel style="width:100px; height:100px;" />
            </td>
            <td>
                <a href="/Urun/UrunSil/@u.UrunID " class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.UrunID " class="btn btn-warning">Güncelle</a>
            </td>
            <td>@u.UrunDurum</td>
            <td>
                <a href="/Urun/SatisYap/@u.UrunID " class="btn btn-default" style="background-color:#b200ff" id="btn1">Satış Yap</a>
            </td>
        </tr>
    }
   
   
</table>
<a href="/Urun/UrunEkle" class="btn btn-primary">Yeni Ürün Ekle</a>

